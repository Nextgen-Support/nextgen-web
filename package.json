{
  "name": "nextgen-support-portal",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "NextGen Support Portal - Frontend and Backend",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "node start-dev.mjs",
    "client": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vitejs/plugin-react": "^5.0.2",
    "vite": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
